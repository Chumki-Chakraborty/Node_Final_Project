<!DOCTYPE html>
<html lang="en">

<%-include('../Common/head')%>

  <body>

    <!-- ======= Header ======= -->
    <%-include('../Common/nav')%>
    
 
      <!-- End Header -->

      <!-- ======= Sidebar ======= -->
      <%-include('../Common/sidebar')%>
        <!-- End Sidebar-->

        <main id="main" class="main">

          <div class="pagetitle">
            <h1>Dashboard</h1>
            <nav>
              <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="/user/home">Home</a></li>
                <li class="breadcrumb-item active">Dashboard</li>
              </ol>
            </nav>
          </div>
          <!-- End Page Title -->
          <section class="section dashboard">
            <div class="row">

              <!-- Left side columns -->
              <div class="col-lg-12">
                <div class="row">
                 <div class="container">
                    <h1 style="text-align: center;">All TestiMonial Data</h1>
                    <a href="/admin/addtestimonial" class="btn btn-primary">Add Testimonial</a> <br> <br>
                    <table class="table" style="text-align: center;" border="1px">
                        <thead>
                          <tr>
                            <th scope="col">Id</th>
                            <th scope="col">Student Name</th>
                            <th scope="col">Student Course</th>
                            <th scope="col">Student Details</th>
                            <th scope="col">Student Image</th>
                            <th colspan="3">Action</th>
                          </tr>
                        </thead>
                        <tbody>
                            <% let id=0%>
                            <% for(Tdata of Tesimonialdata){%>
                                <tr>
                                    <td><%=++id%></td>
                                    <th scope="row"><%=Tdata.StudentName%></th>
                                    <td><%=Tdata.CourseName%></td>
                                    <td><%=Tdata.StudentDetails%></td>
                                    <td><img src="/<%=Tdata.Image%>" alt="Testimonial image" height="100px"></td>
                                    <td><a href="/admin/edit/testimonial/<%=Tdata._id%>" class="btn btn-primary">Edit</a></td>
                                    <td><a href="/admin/delete/testimonial/<%=Tdata._id%>" class="btn btn-danger">Delete</a></td>
                                    <!--  -->
                                    <% if(Tdata.status==0){%>
                                        <td style="align-items: center; text-align: center;" >
                                          <a href="/DeActivate/Thumps/<%=Tdata._id%>"><i style="font-size: 2rem; color:red" class="bi bi-hand-thumbs-down-fill"></i></a>
                                        </td>
                                        <%}else{%>
                                          <td style="align-items: center; text-align: center;" >
                                            <a href="/Activate/Thumps/<%=Tdata._id%>"><i style="font-size: 2rem; color: green;" class="bi bi-hand-thumbs-up-fill"></i></a>
                                          </td>
                                        <%}%>
                                  </tr>
                            <%}%>
                         
                          
                          
                        </tbody>
                      </table>
                 </div>
                 
                </div>
              </div>


            </div>
          </section>


        </main>
        <!-- End #main -->

        <!-- ======= Footer ======= -->
        <%-include("../Common/footer")%>
          <!-- End Footer -->

          <a href="#" class="back-to-top d-flex align-items-center justify-content-center"><i
              class="bi bi-arrow-up-short"></i></a>

          <!-- Vendor JS Files -->
          <script src="assets/vendor/apexcharts/apexcharts.min.js"></script>
          <script src="assets/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
          <script src="assets/vendor/chart.js/chart.umd.js"></script>
          <script src="assets/vendor/echarts/echarts.min.js"></script>
          <script src="assets/vendor/quill/quill.min.js"></script>
          <script src="assets/vendor/simple-datatables/simple-datatables.js"></script>
          <script src="assets/vendor/tinymce/tinymce.min.js"></script>
          <script src="assets/vendor/php-email-form/validate.js"></script>

          <!-- Template Main JS File -->
          <script src="assets/js/main.js"></script>

  </body>

</html>